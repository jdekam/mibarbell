    </ul>
</nav>

<!-- INSIDE CONTAINER -->
<div class="container" style="margin:auto; background-color:#FFFAFA; padding-right:0; padding-left:0;">
    <!-- MEET RESULTS -->
    <br>
    <div class="card shadow" style="border-radius:0; background-color: #00274C;">
        <div class="card-body">
            <h1 style="color: #FFCB05;">Meet Results</h1>
        </div>
    </div>
    <br>

    <div class="accordion" id="meetResults">
        {% for meet in data %}
        <div class="card" style="border-radius:0;">
            <div class="card-header" id="heading{{ loop.index }}">
                <h2 class="mb-0">
                    <button class="btn btn-link collapsed" type="button" data-toggle="collapse" data-target="#collapse{{ loop.index }}" aria-expanded="false" aria-controls="collapse{{ loop.index }}">
                        <span>{{ meet[0] }}</span>
                    </button>
                </h2>
            </div>
            <div id="collapse{{ loop.index }}" class="collapse" aria-labelledby="heading{{ loop.index }}" data-parent="#meetResults">
                <div class="card-body table-responsive">
                    <table class="table table-bordered" style="padding:0; margin:0;">
                        <thead>
                            <tr>
                                <th scope="col">Name</th>
                                <th scope="col">Gender</th>
                                <th scope="col">Weight</th>
                                <th scope="col">Total</th>
                                <th scope="col">Snatch 1</th>
                                <th scope="col">Snatch 2</th>
                                <th scope="col">Snatch 3</th>
                                <th scope="col">C&J 1</th>
                                <th scope="col">C&J 2</th>
                                <th scope="col">C&J 3</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for row in meet[1] %}
                            <tr>
                                <td>{{ row['name'] }}</td>
                                <td>{{ row['gender'] }}</td>
                                <td>{{ row['weight'] }}</td>
                                <td>{{ row['total'] }}</td>
                                {% if '-' in row['snatch1'] %}
                                <td class="table-danger">{{ row['snatch1'] | int | abs }}</td>
                                {% else %}
                                <td class="table-success">{{ row['snatch1'] }}</td>
                                {% endif %}
                                {% if '-' in row['snatch2'] %}
                                <td class="table-danger">{{ row['snatch2'] | int | abs }}</td>
                                {% else %}
                                <td class="table-success">{{ row['snatch2'] }}</td>
                                {% endif %}
                                {% if '-' in row['snatch3'] %}
                                <td class="table-danger">{{ row['snatch3'] | int | abs }}</td>
                                {% else %}
                                <td class="table-success">{{ row['snatch3'] }}</td>
                                {% endif %}
                                {% if '-' in row['cj1'] %}
                                <td class="table-danger">{{ row['cj1'] | int | abs }}</td>
                                {% else %}
                                <td class="table-success">{{ row['cj1'] }}</td>
                                {% endif %}
                                {% if '-' in row['cj2'] %}
                                <td class="table-danger">{{ row['cj2'] | int | abs }}</td>
                                {% else %}
                                <td class="table-success">{{ row['cj2'] }}</td>
                                {% endif %}
                                {% if '-' in row['cj3'] %}
                                <td class="table-danger">{{ row['cj3'] | int | abs }}</td>
                                {% else %}
                                <td class="table-success">{{ row['cj3'] }}</td>
                                {% endif %}
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
    <br>

    <!-- HALL OF FAME -->
    <div class="card shadow" style="border-radius:0; background-color: #00274C;">
        <div class="card-body">
            <h1 style="color: #FFCB05;">Hall of Fame</h1>
        </div>
    </div>
    <div class="card-body table-responsive" style="display:inline-block;">
        <table class="table table-bordered">
            <caption>Top Three Male / Female Totals by Sinclair Score</caption>
            <thead>
                <tr>
                    <th scope="col">Sinclair</th>
                    <th scope="col">Name</th>
                    <th scope="col">Weight</th>
                    <th scope="col">Total</th>
                    <th scope="col">Meet</th>
                </tr>
            </thead>
            <tbody>
                {% for row in bestMales %}
                <tr>
                    <td>{{ row['sinclair'] }}</td>
                    <td>{{ row['name'] }}</td>
                    <td>{{ row['weight'] }}</td>
                    <td>{{ row['total'] }} </td>
                    <td>{{ row['meet'] }} </td>
                </tr>
                {% endfor %}
                <tr height="10" style="border:0;"></tr>
                {% for row in bestFemales %}
                <tr>    
                    <td>{{ row['sinclair'] }}</td>
                    <td>{{ row['name'] }}</td>
                    <td>{{ row['weight'] }}</td>
                    <td>{{ row['total'] }} </td>
                    <td>{{ row['meet'] }}</td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

</div>
</body>
</html>